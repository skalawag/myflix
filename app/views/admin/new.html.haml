%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = bootstrap_form_for [:admin, @video], multipart: true do |f|
          %ul.nav.nav-tabs
            %li
              %a(href="/ui/admin_views_payments") Recent Payments
            %li.active
              %a(href="") Add a New Video
          %fieldset
            = f.text_field :title, class: "span3"
            = label_tag "Categories"
            %br
            = select_tag "category", options_for_select(Category.all.collect { |c| [c.name, c.id] }), multiple: true
            = f.text_area :description, rows: 8, class: "span6"
            = f.file_field :large_cover, class: "btn btn-file"
            = f.file_field :small_cover, class: "btn btn-file"
            = f.text_field :video_url, class: "span3"

          %fieldset.actions.form-group
            .col-sm-6.col-md-offset-3
              %input(type="submit" value="Add Video" class="btn btn-default")

%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        %form.form-horizontal
          %ul.nav.nav-tabs
            %li
              %a(href="/ui/admin_views_payments") Recent Payments
            %li.active
              %a(href="") Add a New Video
          %br
          %fieldset
            .form-group
              %label.control-label.col-sm-3 Title
              .col-sm-3
                %input.form-control(type="text")
            .form-group
              %label.control-label.col-sm-3 Category
              .col-sm-6
                %select.form-control
            .form-group
              %label.control-label.col-sm-3 Description
              .col-sm-6
                %textarea.form-control(rows="8")
            .form-group
              %label.control-label.col-sm-3 Large Cover
              .col-sm-6
                %col.btn.btn-file
                  %input.form-control(type="file")
            .form-group
              %label.control-label.col-sm-3 Small Cover
              .col-sm-6
                %col.btn.btn-file
                  %input.form-control(type="file")

          %fieldset.actions.form-group
            .col-sm-6.col-md-offset-3
              %input(type="submit" value="Add Video" class="btn btn-default")
