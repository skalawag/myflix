%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_for @user, url: users_path, builder: ErrorFormBuilder do |f|
        %header
          %h1 Register
          = f.label :username, "Full Name"
          <br/>
          = f.text_field :username, value: @invitation.new_user_name
          <br/>
          = f.label :email, "Email Address"
          <br/>
          = f.text_field :email, value: @invitation.new_user_email
          <br/>
          = f.label :password, "Password"
          <br/>
          = f.password_field :password
          <br/><br/>
          = f.submit "Submit"
