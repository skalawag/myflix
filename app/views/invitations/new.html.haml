%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_tag invitations_path do
        %header
          %h1 Invite a friend to join MyFlix!
        %fieldset
          .form-group
            = label_tag :name, "Friend's Name"
            .row
              .col-sm-4
                = text_field_tag :name
          .form-group
            = label_tag :email, "Friend's Email Address"
            .row
              .col-sm-4
                = email_field_tag :email
          .form-group
            %label Invitation Message
            .row
              .col-sm-6
                = text_area_tag :message, "Please join this really cool site!", rows: 4, cols: 45
                %fieldset.form-group.action
                  %input(type="submit" value="Send Invitation" class="btn btn-default")
