%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
        = form_tag update_queue_path do
          %table.table
            %thead
              %tr
                %th(width="10%") List Order
                %th(width="30%") Video Title
                %th(width="10%") Play
                %th(width="20%") Rating
                %th(width="15%") Genre
                %th(width="15%") Remove
            %tbody
              - @queued_videos.each do |video|
                %tr
                  %td
                    = hidden_field_tag "queue_items[][id]", video.id
                    = text_field_tag "queue_items[][position]", @queued_videos.index(video) + 1
                  %td
                    = link_to video.title
                  %td
                    = button_to "Play", nil, class: "btn btn-default"
                  %td
                    %select.form-group(name="")
                      %option(value="5") 5 Stars
                      %option(value="4") 4 Stars
                      %option(value="3") 3 Stars
                      %option(value="2") 2 Stars
                      %option(value="1") 1 Star
                  %td
                    = link_to video.categories.first.name
                  %td
                    = link_to "/videos/#{video.id}/remove_from_queue", method: :post do
                      %i.glyphicon.glyphicon-remove
          = submit_tag "Update Instant Queue", class: "btn btn-default"
