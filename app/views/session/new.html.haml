%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_for @user, url: '/login', builder: MyFormBuilder do |f|
        %header
          %h1 Sign in
          = f.label :email, "Email Address"
          <br/>
          = f.text_field :email
          <br/>
          = f.label :password, "Password"
          <br/>
          = f.password_field :password
          <br/><br/>
          = f.submit "Submit"
