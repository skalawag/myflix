%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_for @user do |f|
        %header
          %h1 Sign in
        %fieldset
          .form-group
            = f.label "Email Address"
            .row
              .col-sm-4
                = f.email_field
          .form-group
            = label "Password"
            .row
              .col-sm-4
                = f.password_field
                %fieldset.form-group.action
                  = f.submit "Sign in"
