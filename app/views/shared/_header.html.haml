%section#top-header.row
  %h1.col-md-2
    = link_to "MyFLiX", home_path
  - if current_user
    %ul.col-md-4.clearfix
      %li= link_to "Videos", home_path
      %li= link_to "My Queue", queue_path
      %li= link_to "People", user_people_path(current_user.id)
    %form.col-md-5.navbar-form(action="/search")
      .form-group
        %input.form-control(type="text" name="search_term" placeholder="Search for videos here")
      %button.btn.btn-default(type="submit") Search
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            Welcome, #{current_user.username}
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              %a(href="#") Account
              %a(href="#") Plan and Billing
              = link_to "Sign out", logout_path
