%article.video_category
  - @categories.each do |category|
    - if not category.videos.empty?
      %header
        %h3= link_to "#{category.name}", genre_path(category)
        %br
        .videos.row
          - category.recent_videos.each do |video|
            .video.col-sm-2
              = link_to show_path(video.id) do
                %img(src="#{video.small_cover.url}")
